<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Select Meal Plan:"
        android:textAlignment="center"
        android:textSize="35dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:gravity="center"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <Button
            android:id="@+id/twelveTen"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp"
            android:text="12 / 10" />

        <Button
            android:id="@+id/tenFortyFive"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="10 / 45" />

        <Button
            android:id="@+id/meals"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="47 meals" />

        <Button
            android:id="@+id/credits"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="130 cred" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Sunday:"
            android:textSize="25dp"
            android:gravity="center"
            />


    </ScrollView>
    <EditText
        android:id="@+id/monthlyExpense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="Monthy Expense"
        android:textSize="20sp" />

    <Button
        android:id="@+id/expenseButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Submit Monthly Expense"
        android:textSize="20sp" />

</LinearLayout>