<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Select Meal Plan:"
        android:textAlignment="center"
        android:textSize="35dp"
        android:background="@color/colorPrimary"
        android:textColor="#FFF"
        android:gravity="center"
        >
    </TextView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/radioGroup"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/twelveFifteen"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="20dp"
            android:text="12 / 15" />

        <RadioButton
            android:id="@+id/tenFortyFive"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="10 / 45" />

        <RadioButton
            android:id="@+id/meals"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="47 meals" />

        <RadioButton
            android:id="@+id/credits"
            android:layout_width="95dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="130 cred" />
    </RadioGroup>


    <EditText
        android:id="@+id/monthlyExpense"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:hint="Enter Monthly Expense"
        android:textSize="18sp" />

    <Button
        android:id="@+id/expenseButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Submit Monthly Expense"
        android:textSize="20sp" />

</LinearLayout>